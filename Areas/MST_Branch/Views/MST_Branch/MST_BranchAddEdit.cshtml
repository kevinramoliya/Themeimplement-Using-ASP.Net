﻿@{
    ViewData["Title"] = "Branch Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Themeimplement.Areas.MST_Branch.Models.MST_BranchModel

<div class="main" id="main">
    <div class="body">
<form method="post" asp-area="MST_Branch" asp-controller="MST_Branch" asp-action="MST_BranchSave">
    @Html.HiddenFor(x=>x.BranchID)
            <div class="mt-3 mb-3">
                <h2> Branch Add / Update Page</h2>
            </div>
            <div class="mb-3 row form-group">
                <label class="col-sm-2 col-form-label">Branch Name</label>
                <div class="col-xl-4">
        <input type="text" name="BranchName" asp-for="@Model.BranchName" class="form-control" id="formGroupExampleInput" placeholder="Enter Branch Name">
        <span asp-validation-for="BranchName" class="text-danger"></span>
    </div>
    </div>
            <div class="mb-3 row form-group">
                <label class="col-sm-2 col-form-label">Branch Code</label>
                <div class="col-xl-4">
        <input type="text" name="BranchCode" asp-for="@Model.BranchCode" class="form-control" id="formGroupExampleInput2" placeholder="Enter Branch Code">
                <span asp-validation-for="BranchCode" class="text-danger"></span>
    </div>
    </div>
            <div class="row">
                <div class="col-1 my-2 me-2">
        <button class="btn btn-success" type="submit">Save</button>
    </div>
                <div class="col-10 my-2">
                    <a class="btn btn-primary" asp-action="MST_BranchList">Back</a>
                </div>
            </div>
</form>
</div></div>