@model Themeimplement.Areas.LOC_State.Models.LOC_StateModel;
@using System.Data;
<div class="main" id="main">
	<div class="body">
		@*<breadcrumb></breadcrumb>*@
		<form method="post" asp-controller="LOC_State" asp-action="LOC_StateSave">
			@Html.HiddenFor(x=>x.StateID)
			<div class="mb-3">
				<div class="mt-3 mb-3">
					<h3> State Add / Update Page</h3>
				</div>
				<div class="mb-3 row form-group">
					<label class="col-sm-2 col-form-label">State Name</label>
					<div class="col-xl-4">
						<input type="text" name="StateName" asp-for="@Model.StateName" class="form-control" id="formGroupExampleInput" placeholder="Enter State Name">
						<span asp-validation-for="StateName" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="mb-3">
				<div class="mb-3 row form-group">
					<label class="col-sm-2 col-form-label">State Code</label>
					<div class="col-xl-4">
						<input type="text" name="StateCode" asp-for="@Model.StateCode" class="form-control" id="formGroupExampleInput2" placeholder="Enter State Code">
						<span asp-validation-for="StateCode" class="text-danger"></span>
					</div>
				</div>
			</div>

			<div class="form-group dropdown">
				<div class="mb-3 row form-group">
					<label class="col-sm-2 col-form-label">Country Name</label>
					<div class="col-xl-4">
						<select class="form-control" data-toggle="dropdown" asp-for="@Model.CountryID" asp-items="@(new SelectList(ViewBag.CountryList,"CountryID","CountryName"))">
							<option value="">Select Country</option>
						</select>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-1 my-2 me-2">
				<button class="btn btn-success" type="submit">Save</button>
			</div>
			<div class="col-10 my-2">
				<a class="btn btn-primary" asp-action="LOC_StateList">Back</a>
			</div>
			</div>
		</form>
	</div>
</div>



